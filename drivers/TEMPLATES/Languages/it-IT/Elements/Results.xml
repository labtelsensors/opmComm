<?xml version="1.0" encoding="utf-8"?>
<Template version="1.0.0.0">
  <Body>
    <Div Alignment="Top" Positioning="Content" >
      <Label Alignment="Left" Text="Risultati:" ID="0" FontSize="15" />
    </Div>

    <Div Alignment="Top" Positioning="Content" Padding="0,20,0,0" >
      <Div Alignment="Top" Positioning="Content">
        <Label Alignment="Left" Positioning="Percentage" Text="Percorsi:" ID="1"  Width="25" FontSize="12" />
        <Data Alignment="Left" DataSource="User" Field="RouteCount" FontSize="12" />
      </Div>

      <Div Alignment="Top" Positioning="Content">
        <Label Alignment="Left" Positioning="Percentage" Text="Cavi:" ID="2" Width="25" FontSize="12" />
        <Data Alignment="Left" DataSource="User" Field="CableCount" FontSize="12" />
      </Div>

      <Div Alignment="Top" Positioning="Content">
        <Label Alignment="Left" Positioning="Percentage" Text="Fibre:" ID="3" Width="25" FontSize="12" />
        <Data Alignment="Left" DataSource="Fiber" Field="RowCount" FontSize="12" />
      </Div>

      <Div Alignment="Top" Positioning="Content">
        <Label Alignment="Left" Positioning="Percentage" Text="File:" ID="4" Width="25" FontSize="12" />
        <Data Alignment="Left" DataSource="User" Field="FileCount" FontSize="12" />
      </Div>

      <Div Alignment="Top" Positioning="Content">
        <Label Alignment="Left" Positioning="Percentage" Text="Tracce:" ID="5" Width="25" FontSize="12" />
        <Data Alignment="Left" DataSource="User" Field="TraceCount" FontSize="12" />
      </Div>

      <Div Conditional="HasOPM" Positioning="Content" Alignment="Top" >
        <Label Alignment="Left" Positioning="Percentage" Text="Risultati prova OPM:" ID="6" Width="25" FontSize="12" />
        <Data Alignment="Left" DataSource="OPMInfo" Field="RowCount" FontSize="12" />
      </Div>

    </Div>

  </Body>
</Template>
