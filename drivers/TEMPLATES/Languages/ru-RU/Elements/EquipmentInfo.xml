<?xml version="1.0" encoding="utf-8"?>
<Template version="1.0.0.0">
	<Body>
		<Div Positioning="Content" Alignment="Top"  >
			<Div Positioning="Content" Alignment="Top" >
				<Div Positioning="Percentage" Alignment="Left" Width="50">
					<Div Positioning="Content" Alignment="Top" >
						<Label Text="Модель основного прибора:" ID="0" Positioning="Percentage" Width="50" FontSize="12" Conditional="OPMInfo.MainModel.Length!=0"/>
						<Data DataSource="OPMInfo" Field="MainModel" FontSize="12" Conditional="OPMInfo.MainModel.Length!=0"/>
					</Div>
					<Div Positioning="Content" Alignment="Top" >
						<Label Text="Заводской номер основного прибора:" ID="1" Positioning="Percentage" Width="50" FontSize="12" Conditional="OPMInfo.MainSerialNumber.Length!=0"/>
						<Data DataSource="OPMInfo" Field="MainSerialNumber" FontSize="12" Conditional="OPMInfo.MainSerialNumber.Length!=0"/>
					</Div>
					<Div Positioning="Content" Alignment="Top"  >
						<Label Text="Дата калибровки основного прибора:" ID="2" Positioning="Percentage" Width="50" FontSize="12" Conditional="OPMInfo.MainCalDate.IsValidDate=True"/>
						<Data DataSource="OPMInfo" Field="MainCalDate" FontSize="12" Format="Short" Conditional="OPMInfo.MainCalDate.IsValidDate=True"/>
					</Div>
				</Div>
				<Div Positioning="Percentage" Alignment="Left" Width="50">
					<Div Positioning="Content" Alignment="Top" >
						<Label Text="Модель удалённого прибора:" ID="3" Positioning="Percentage" Width="50" FontSize="12" Conditional="OPMInfo.RemoteModel.Length!=0"/>
						<Data DataSource="OPMInfo" Field="RemoteModel" FontSize="12" Conditional="OPMInfo.RemoteModel.Length!=0"/>
					</Div>
					<Div Positioning="Content" Alignment="Top" >
						<Label Text="Заводской номер удалённого прибора:" ID="4" Positioning="Percentage" Width="50" FontSize="12" Conditional="OPMInfo.RemoteSerialNumber.Length!=0" />
						<Data DataSource="OPMInfo" Field="RemoteSerialNumber" FontSize="12" Conditional="OPMInfo.RemoteSerialNumber.Length!=0"/>
					</Div>
					<Div Positioning="Content" Alignment="Top" >
						<Label Text="Дата калибровки удалённого прибора:" ID="5" Positioning="Percentage" Width="50" FontSize="12" Conditional="OPMInfo.RemoteCalDate.IsValidDate=True"/>
						<Data DataSource="OPMInfo" Field="RemoteCalDate" FontSize="12" Format="Short" Conditional="OPMInfo.RemoteCalDate.IsValidDate=True"/>
					</Div>
				</Div>
			</Div>
		</Div>
	</Body>
</Template>
