<?xml version="1.0" encoding="utf-8"?>
<Template version="1.0.0.0">
	<Body>
		<PageSettings>
			<Padding>40,40,40,40</Padding>
			<Positioning>Absolute</Positioning>
			<BackColor>255,255,255</BackColor>
			<BorderStyle>Radius</BorderStyle>
		</PageSettings>

		<Div Alignment="Top" Positioning="Percentage" Height="10" Padding="0,20,0,0">
			<Label Alignment="HorizCenter" Text="Информация о вакансии" ID="0" FontSize="36" />
		</Div>

		<Div Alignment="Top" Positioning="Content" Padding="0,20,0,0" >
			<Div Positioning="Content" Alignment="Left" >
				<Template FileName="ResultsFull.xml"  />
			</Div>
		</Div>

		<Div Alignment="Top" Positioning="Content" Padding="0,20,0,0">
			<Label Alignment="Left" Text="Текущий раздел:" ID="1" FontSize="20" />
			<Data Alignment="Left" DataSource="User" Field="CurrentPath" Wrap="True" FontSize="20" />
		</Div>

		<Div Alignment="Top" Positioning="Content" Padding="20,20,0,0" >
			<Label Alignment="Left" Text="* Графы представляют собой результат найдено" ID="2" FontSize="20" />
		</Div>
		<Div Alignment="Top" Positioning="Content" Padding="20,0,0,0" >
			<Label Alignment="Left" Text="Проверка данных не проводилось" ID="3" FontSize="20" />
		</Div>

	</Body>
</Template>
